@Article{Carlier2018,
  author    = {Carlier, A. and Vasilevich, A. and Marechal, M. and de Boer, J. and Geris, L.},
  journal   = {Scientific Reports},
  title     = {In silico clinical trials for pediatric orphan diseases},
  year      = {2018},
  issn      = {2045-2322},
