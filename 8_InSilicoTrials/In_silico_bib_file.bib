@Article{Favre2021,
  author     = {Favre, Philippe and Maquer, Ghislain and Henderson, Adam and Hertig, Daniel and Ciric, Daniel and Bischoff, Jeffrey E.},
  journal    = {Annals of Biomedical Engineering},
  title      = {In {Silico} {Clinical} {Trials} in the {Orthopedic} {Device} {Industry}: {From} {Fantasy} to {Reality}?},
  year       = {2021},
