  language   = {eng},
  pmid       = {31769699},
  shorttitle = {In {Silico} {Trials} of an {Open}-{Source} {Android}-{Based} {Artificial} {Pancreas}},
}

 
@Article{Swietlik2022,
  author   = {Świetlik, Dariusz and Białowąs, Jacek and Kusiak, Aida and Krasny, Marta},
  journal  = {Pharmaceuticals (Basel, Switzerland)},
  title    = {Virtual {Therapy} with the {NMDA} {Antagonist} {Memantine} in {Hippocampal} {Models} of {Moderate} to {Severe} {Alzheimer}'s {Disease}, in {Silico} {Trials}},
  year     = {2022},
